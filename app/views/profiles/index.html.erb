<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>
<div class="message-show">
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Paperclip image</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Apt</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.user.email %></td>
  <!-- only one image showing up any other added images not showing up -->
          <td><%= image_tag profile.avatar.url(:medium),class: "img-thumbnail" if profile.avatar %></td>

          <td><%= profile.firstname %></td>
          <td><%= profile.lastname %></td>
          <td><%= profile.apt %></td>

          <td  class="btn btn-success"><%= link_to 'Show', profile %></td>
          <td class="btn btn-warning"><%= link_to 'Edit', edit_profile_path(profile) %></td>
          <td class="btn btn-danger"><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 <div> 

<br>
<button type="button" class="btn btn-info">
  <%= link_to 'New Profile', new_profile_path %>
</button>